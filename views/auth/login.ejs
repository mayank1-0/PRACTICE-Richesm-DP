    <!--Scripts-------------------->
    <!-- JAVASCRIPT -->
    <script src="/public/admin-assets/assets/libs/jquery/jquery.min.js"></script>
    <script>
        function login() {
            var data = {
                email: $("#email").val(),
                password: $("#password").val(),
            };
            $.ajax({                      
                type: "POST",
                url: "/admin-login",        
                dataType: 'JSON',
                data: data,
                success: function success(result) {
                    window.localStorage.setItem('token', result.token);
                    window.location.href = '/admin/dashboard';
                },
                error: function error(error) {        
                    window.alert('Error: ', error);
                } 
            });
        }
    </script>

